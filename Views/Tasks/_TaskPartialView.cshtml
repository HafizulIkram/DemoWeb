@model DemoWeb.Models.PagedTaskViewModel

<div id="taskList" class="container">
    <div class="row mb-3 justify-content-center">
        <div class="col-2">
            <h5>Title</h5>
        </div>
        <div class="col-3">
            <h5>Description</h5>
        </div>
        <div class="col-2">
            <h5>Priority</h5>
        </div>
        <div class="col-2">
            <h5>Created At</h5>
        </div>
       
        <div class="col-1 text-center">
            <h5>Action</h5>
        </div>
    </div>

    @foreach (var task in Model.Tasks)
    {
        <div class="row align-items-center py-3 my-2 border rounded justify-content-center">
            <div class="col-2">
                <span>@task.TaskTitle</span>
            </div>
            <div class="col-3">
                <span>@task.TaskDescription</span>
            </div>
            <div class="col-2">
                @if (task.TaskPriority == "Urgent")
                {
                    <span class="badge bg-warning text-dark">Urgent</span>
                }
                else if (task.TaskPriority == "Normal")
                {
                    <span class="badge bg-primary">Normal</span>
                }
            </div>
            <div class="col-2">
                <span>@task.CreatedAt.ToString("yyyy-MM-dd")</span>
            </div>
           
            <div class="col-1 text-center">
                <a href="@Url.Action("Edit", "Tasks", new { id = task.TaskId })" class="text-primary me-2">
                    <i class="fa-solid fa-pencil"></i>
                </a>
              @*   <a href="@Url.Action("Delete", "Tasks", new { id = task.TaskId })" class="text-danger">
                    <i class="fa-solid fa-trash"></i>
                </a> *@
            </div>
        </div>
    }

    <!-- Pagination controls -->
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="#" onclick="loadTaskPage(@i); return false;">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>
