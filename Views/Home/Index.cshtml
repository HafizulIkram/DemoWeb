@{
    ViewData["Title"] = "Task Management Homepage";
    Layout = "_Homepage";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Management Software</title>
    <link rel="stylesheet" href="Homepage.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>

    <!-- feature Start -->
    <div class="container-fluid feature bg-light py-5">
        <div class="container py-5">
            <div class="text-center mx-auto pb-5" data-wow-delay="0.2s" style="max-width: 800px;">
                <h4 class="text-uppercase text-primary">Key Features of Our System</h4>
                <h1 class="display-3 text-capitalize mb-3">Enhancing Your Task Management Experience</h1>
            </div>
            <div class="row g-4">
                <div class="col-md-6 col-lg-4" data-wow-delay="0.2s">
                    <div class="feature-item p-4">
                        <div class="feature-icon mb-3"><i class="fas fa-tasks text-white fa-3x"></i></div>
                        <a href="#" class="h4 mb-3">Task Management</a>
                        <p class="mb-3">Organize and manage tasks efficiently. Track task progress, assign tasks, and prioritize effectively.</p>
 
                    </div>
                </div>

                <div class="col-md-6 col-lg-4" data-wow-delay="0.4s">
                    <div class="feature-item p-4">
                        <div class="feature-icon mb-3"><i class="fas fa-chart-line text-white fa-3x"></i></div>
                        <a href="#" class="h4 mb-3">Progress Tracking</a>
                        <p class="mb-3">Monitor the progress of each project and task in real-time. Stay updated with dynamic reports and dashboards.</p>
                       
                    </div>
                </div>

                <div class="col-md-6 col-lg-4 " data-wow-delay="0.6s">
                    <div class="feature-item p-4">
                        <div class="feature-icon mb-3"><i class="fas fa-users text-white fa-3x"></i></div>
                        <a href="#" class="h4 mb-3">Team Collaboration</a>
                        <p class="mb-3">Facilitate teamwork with features like shared task boards, group messaging, and collaborative tools.</p>
                      
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- feature End -->
    <!-- About Start -->
    <div class="container-fluid about overflow-hidden py-5">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-xl-6 wow fadeInLeft">
                    <div class="about-img rounded h-100">
                        <img src="~/image/CorouselThird.jpg" class="img-fluid rounded h-100 w-100" style="object-fit: cover;" alt="">
                        <div class="about-exp"><span>Dedicated to Excellence</span></div>
                    </div>
                </div>
                <div class="col-xl-6 wow fadeInRight">
                    <div class="about-item">
                        <h4 class="text-primary text-uppercase">About Us</h4>
                        <h1 class="display-3 mb-3">We Deliver Effective Task Management Solutions.</h1>
                        <p class="mb-4">
                            At our company, we specialize in providing innovative solutions to help you manage tasks effectively. Our platform is designed to enhance productivity and streamline workflows for teams of all sizes.
                        </p>
                        <div class="bg-light rounded p-4 mb-4">
                            <div class="row">
                                <div class="col-12">
                                    <div class="d-flex">
                                        <div class="pe-4">
                                            <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                                                <i class="fas fa-tasks text-white fa-2x"></i>
                                            </div>
                                        </div>
                                        <div class="">
                                            <a href="#" class="h4 d-inline-block mb-3">Satisfied Clients</a>
                                            <p class="mb-0">We pride ourselves on customer satisfaction and a proven track record of successful project management.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="bg-light rounded p-4 mb-4">
                            <div class="row">
                                <div class="col-12">
                                    <div class="d-flex">
                                        <div class="pe-4">
                                            <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                                                <i class="fas fa-cogs text-white fa-2x"></i>
                                            </div>
                                        </div>
                                        <div class="">
                                            <a href="#" class="h4 d-inline-block mb-3">Tailored Solutions</a>
                                            <p class="mb-0">Our platform can be customized to meet the unique needs of your organization, ensuring maximum efficiency.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- About End -->


  
</body>
</html>
