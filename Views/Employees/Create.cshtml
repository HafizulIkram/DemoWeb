                    <span asp-validation-for="UiFramework" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DesignTools" class="control-label"></label>
                    <input asp-for="DesignTools" class="form-control" />
                    <span asp-validation-for="DesignTools" class="text-danger"></span>
                </div>
            </div>

            <!-- Backend-Specific Fields -->
            <div id="backend-section">
                <h4>Backend Developer Details</h4>
                <div class="form-group">
                    <label asp-for="BackendLanguage" class="control-label"></label>
                    <input asp-for="BackendLanguage" class="form-control" />
                    <span asp-validation-for="BackendLanguage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DatabaseTechnology" class="control-label"></label>
                    <input asp-for="DatabaseTechnology" class="form-control" />
                    <span asp-validation-for="DatabaseTechnology" class="text-danger"></span>
                </div>
            </div>

            <!-- Fullstack-Specific Fields -->
            <div id="fullstack-section">
                <h4>Fullstack Developer Details</h4>
                <div class="form-group">
                    <label asp-for="FullstackLevel" class="control-label"></label>
                    <input asp-for="FullstackLevel" class="form-control" />
                    <span asp-validation-for="FullstackLevel" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
