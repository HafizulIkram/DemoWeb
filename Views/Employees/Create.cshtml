@model DemoWeb.Models.Employees

@{
    
    ViewData["Title"] = "Create Employee";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {

        function getUrl(action, controller) {
            const baseUrl = window.location.origin; 
            return `${baseUrl}/${controller}/${action}`;
        }

        // Hide role-specific sections by default
        $("#ui-section").hide();
        $("#backend-section").hide();
        $("#fullstack-section").hide();

        // Show relevant fields when the role changes
        $("#EmployeeRole").on("change", function () {
            var selectedRole = $(this).val();
            $("#ui-section").hide();
            $("#backend-section").hide();
            $("#fullstack-section").hide();

            if (selectedRole === "UI") {
                $("#ui-section").show();
            } else if (selectedRole === "Backend") {
                $("#backend-section").show();
            } else if (selectedRole === "Fullstack") {
                $("#fullstack-section").show();
            }
        });

        $("form").on("submit", function (e) {
            e.preventDefault(); // Prevent default form submission

            var selectedRole = $("#EmployeeRole").val();

            // Clear input values for non-selected role sections
            if (selectedRole !== "UI") {
                $("#ui-section input").val('');
            }
            if (selectedRole !== "Backend") {
                $("#backend-section input").val('');
            }
            if (selectedRole !== "Fullstack") {
                $("#fullstack-section input").val('');
            }

            // Get anti-forgery token
            var token = $("input[name='__RequestVerificationToken']").val();

            // Collect form data, including the RequestVerificationToken
            const data = {
                _RequestVerificationToken: token,
                EmployeeName: $('#EmployeeName').val(),
                EmployeeEmail: $('#EmployeeEmail').val(),
                EmployeeAddress: $('#EmployeeAddress').val(),
                EmployeeRole: $('#EmployeeRole').val(),
                EmployeeJoinedDate: $('#EmployeeJoinedDate').val(),
                UiFramework: $('#UiFramework').val(),
                DesignTools: $('#DesignTools').val(),
                BackendLanguage: $('#BackendLanguage').val(),
                DatabaseTechnology: $('#DatabaseTechnology').val(),
                FullstackLevel: $('#FullstackLevel').val(),
            };

            console.log({ data });

            // Send AJAX request
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Create", "Employees")',
                data: data,
                headers: {
                    'RequestVerificationToken': token // Add the token in headers
                }
            })
                .done((data) => {
                
 
            $('.modal-body').text(data.message);
      
            $('#exampleModal').modal('show');
                    console.log({ data });
                })
                .fail((err) => {
                    console.error(err);
                })
                .always(() => {
                    console.log('always called');
                });
        });
    });
</script>



<h1>Create Employee</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post" asp-controller="employees">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Common Fields -->
            <div class="form-group">
                <label asp-for="EmployeeName" class="control-label"></label>
                <input asp-for="EmployeeName" class="form-control" />
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmployeeAddress" class="control-label"></label>
                <input asp-for="EmployeeAddress" class="form-control" />
                <span asp-validation-for="EmployeeAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmployeeEmail" class="control-label"></label>
                <input asp-for="EmployeeEmail" class="form-control" />
                <span asp-validation-for="EmployeeEmail" class="text-danger"></span>
            </div>

            <div class="form-group">
