@* @model DemoWeb.Models.Employees

@{
    ViewData["Title"] = "Edit Employee Details";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
   $(document).ready(function () {

        function getUrl(action, controller) {
            const baseUrl = window.location.origin;
            return `${baseUrl}/${controller}/${action}`;
        }

    // Hide role-specific sections by default
    $("#ui-section").hide();
    $("#backend-section").hide();
    $("#fullstack-section").hide();



    // Get the current value of EmployeeRole (which is readonly)
    var role = $('#EmployeeRole').val();

    // Show the relevant section based on the role value
    if (role === "UI") {
        $("#ui-section").show();
    } else if (role === "Backend") {
        $("#backend-section").show();
    } else if (role === "Fullstack") {
        $("#fullstack-section").show();
    }


        $("form").on("submit", function (e) {
            e.preventDefault(); // Prevent default form submission

            // Get anti-forgery token
            var token = $("input[name='__RequestVerificationToken']").va l();

            // Get EmployeeId from the hidden field
            var id = $("input[name='EmployeeId']").val();

            // Collect form data, including the RequestVerificationToken
            const data = {
                __RequestVerificationToken: token,  // Correct anti-forgery token name
                EmployeeName: $('#EmployeeName').val(),
                EmployeeEmail: $('#EmployeeEmail').val(),
                EmployeeAddress: $('#EmployeeAddress').val(),
                EmployeeRole: $('#EmployeeRole').val(),
                EmployeeJoinedDate: $('#EmployeeJoinedDate').val(),
                UiFramework: $('#UiFramework').val(),
                EmployeeId: id,  // Correct assignment
                DesignTools: $('#DesignTools').val(),
                BackendLanguage: $('#BackendLanguage').val(),
                DatabaseTechnology: $('#DatabaseTechnology').val(),
                FullstackLevel: $('#FullstackLevel').val(),
            };

            console.log({ data });

            // Send AJAX request
            $.ajax({
                type: 'POST',
                url: getUrl('Edit', 'Employees') + '/' + id, // Use getUrl function for dynamic URL building
                data: data, // Pass form data
                headers: {
                    'RequestVerificationToken': token // Add the anti-forgery token in the headers
                }
            })
                .done((response) => {
                    console.log('Success:', response);
                    // Add any success handling logic here
                })
                .fail((err) => {
                    console.error('Error:', err);
                    // Add any error handling logic here
                })
                .always(() => {
                    console.log('Request completed.');
                });
        });

});

</script>

