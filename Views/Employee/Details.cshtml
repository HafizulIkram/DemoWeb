@model DemoWeb.Models.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<br />


<div class="container my-5">
    <h2 class="mb-4">@Model.EmployeeName Profile</h2>

    <div class="row">
        <!-- Profile Card -->
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">

                    <h4 class="card-title">@Model.EmployeeName</h4>
                    <p class="text-muted">@Model.EmployeePosition</p>
                    <hr>
                    <p>
                        <strong>Status:</strong>
                        <span class="@(Model.isActive ? "text-success" : "text-danger")">
                            @(Model.isActive ? "Active" : "Inactive")
                        </span>
                    </p>
                    <p><strong>Home Address:</strong> @Model.EmployeeAddress</p>
                    <p><strong>Email:</strong> @Model.EmployeeEmail</p>
                    <p><strong>Date Joined:</strong> @Model.DateJoined.ToString("yyyy-MM-dd")</p>
                   
                </div>
            </div>
        </div>

        <!-- Basic Information Card -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Basic Information</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>First Name:</strong> @Model.EmployeeName.Split(' ')[0]</p>
                            <p><strong>Last Name:</strong> @Model.EmployeeName.Split(' ')[^1]</p>
                            <p><strong>Email:</strong> @Model.EmployeeEmail</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Position:</strong> @Model.EmployeePosition</p>
                            <p><strong>Status:</strong> @(Model.isActive ? "Active" : "Inactive")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Task Status Cards -->
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Finished Tasks</h5>
                    <p class="display-4 text-success">@Model.finishTaskCount</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Pending Tasks</h5>
                    <p class="display-4 text-warning">@Model.pendingTaskCount</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Unfinished Tasks</h5>
                    <p class="display-4 text-danger">@Model.incompleteTaskCount</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>