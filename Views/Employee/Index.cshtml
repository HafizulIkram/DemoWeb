@model IEnumerable<DemoWeb.Entity.EmployeeEntity>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
	$(document).ready(function () {
		$('#searchInput').on('keydown', function (e) {
			if (e.key === 'Enter') {
				e.preventDefault(); // Prevent the default form submission
				}
			});
		});
</script>

<h1>Employee List</h1>
<div class="container-fluid">
<div class="row mb-4">
	<div class="col-md-6">
		<form asp-action="Index" method="get" id="searchForm" class="form-inline">
			<input type="text" name="SearchString" id="searchInput" class="form-control" value="@ViewData["CurrentFilter"]" placeholder="Search employees..." />
			<button type="submit" class="btn btn-primary ml-2">
				<i class="bi bi-search"></i> Search
			</button>
		</form>
	</div>


	<div class="col-md-2 text-right">
		<a asp-action="Create" class="btn btn-success">
			<i class="bi bi-plus-circle"></i> Add New
		</a>
	</div>
</div>

<div class="row">
	
	@foreach (var employee in Model)
	{
		<div class="col-md-4 mb-4">
			<div class="card employee-card">
				<div class="card-body">
					<h5 class="card-title">@Html.DisplayFor(modelItem => employee.EmployeeName)</h5>
					<p class="card-text">
						<strong>Email:</strong> @Html.DisplayFor(modelItem => employee.EmployeeEmail) <br />
						<strong>Position:</strong> @Html.DisplayFor(modelItem => employee.EmployeePosition) <br />
						<strong>Address:</strong> @Html.DisplayFor(modelItem => employee.EmployeeAddress) <br />
						<strong>Joined:</strong> @Html.DisplayFor(modelItem => employee.DateJoined)
					</p>
					<div class="btn-group">
						<a asp-action="Edit" asp-route-id="@employee.EmployeeId" class="btn btn-sm btn-outline-primary">Edit</a>
						<a asp-action="Details" asp-route-id="@employee.EmployeeId" class="btn btn-sm btn-outline-info">Details</a>
						<a asp-action="Delete" asp-route-id="@employee.EmployeeId" class="btn btn-sm btn-outline-danger">Delete</a>
					</div>
				</div>
			</div>
		</div>
	}
</div>
</div>
